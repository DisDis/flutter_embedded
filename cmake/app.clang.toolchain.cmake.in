set(CMAKE_SYSTEM_VERSION 1)
set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR @TARGET_ARCH@)

#compiler
set(CMAKE_C_COMPILER @TOOLCHAIN_DIR@/bin/clang)
set(CMAKE_CXX_COMPILER @TOOLCHAIN_DIR@/bin/clang++)

# sysroot
set(CMAKE_SYSROOT @TARGET_SYSROOT@)
set(CMAKE_FIND_ROOT_PATH @TARGET_SYSROOT@)
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)

include(@CMAKE_SOURCE_DIR@/cmake/llvm_config.cmake)

# compiler flags
set(CMAKE_ASM_FLAGS "${CMAKE_ASM_FLAGS} --target=@TARGET_TRIPLE@ -fno-integrated-as") # userland gas asm needs this
set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} --target=@TARGET_TRIPLE@ ${LLVM_CFLAGS} -flto")
set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} --target=@TARGET_TRIPLE@ -stdlib=libc++ ${LLVM_CXXFLAGS} -flto")
set(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${LLVM_LDFLAGS}  --rtlib=compiler-rt -fuse-ld=lld -flto -v")
set(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${LLVM_LDFLAGS} --rtlib=compiler-rt -fuse-ld=lld -flto -v")

set(ENV{PKG_CONFIG_PATH}  "@PKG_CONFIG_PATH@")
